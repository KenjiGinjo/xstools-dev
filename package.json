{
  "name": "@xstools-dev/mono",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "check-mono": "sherif",
    "check-type": "turbo run check-type",
    "commit": "cz",
    "dev": "turbo run dev",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint:js": "turbo run lint:js",
    "lint:js:fix": "turbo run lint:js:fix",
    "prepare": "simple-git-hooks",
    "publish": "turbo run build && changeset version && changeset publish",
    "release": "release-it"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --edit $1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,html,css,md,json}": "prettier --check",
    "**/*.{js,jsx,ts,tsx}": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": "@xstools-dev/prettier-config/base",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/bun": "^1.1.5",
    "@types/node": "^20.14.7",
    "@xstools-dev/eslint-config": "workspace:^",
    "@xstools-dev/mix": "workspace:^",
    "@xstools-dev/prettier-config": "workspace:^",
    "@xstools-dev/typescript-config": "workspace:^",
    "commitizen": "^4.3.0",
    "lint-staged": "^15.2.7",
    "release-it": "^17.4.0",
    "sherif": "^0.9.0",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.1.0",
    "turbo": "^2.0.5",
    "typescript": "^5.5.2"
  },
  "packageManager": "pnpm@9.4.0",
  "release-it": {
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "github": {
      "release": true
    },
    "git": {
      "commitMessage": "chore(release): release version ${version}"
    }
  }
}
