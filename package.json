{
  "name": "@xstools-dev/mono",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "check-types": "turbo run check-types",
    "commit": "cz",
    "dev": "turbo run dev",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint:js": "turbo run lint:js",
    "lint:js:fix": "turbo run lint:js:fix",
    "prepare": "simple-git-hooks",
    "publish": "turbo run build && changeset publish"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --edit $1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,html,css,md,json}": "prettier --check",
    "**/*.{js,jsx,ts,tsx}": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": "@xstools-dev/prettier-config/base",
  "devDependencies": {
    "@types/bun": "^1.1.5",
    "@types/node": "^20.14.7",
    "@xstools-dev/one": "workspace:^",
    "typescript": "^5.5.2"
  },
  "packageManager": "pnpm@9.4.0"
}
